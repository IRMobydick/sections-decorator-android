<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    package="co.netguru.android.sectionsDecoratorDemo"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="co.netguru.android.sectionsDecoratorDemo.application.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="co.netguru.android.sectionsDecoratorDemo.feature.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat"
            android:name=".feature.demo.DemoActivity" />
    </application>
</manifest>
